# Discord configuration
DISCORD_TOKEN=discord.token.goes.here
DISCORD_CLIENT_ID=123456789012345678
GUILD_ID=876543210987654321

# User filtering
EXCLUDED_USERS=111111111111111111,222222222222222222

# AI Model Selection
USE_CLAUDE=false                    # Set to true to use Claude instead of OpenAI
CLAUDE_API_KEY=your_claude_api_key  # Required if USE_CLAUDE is true
CLAUDE_MODEL=claude-2.1             # Optional, defaults to claude-2.1

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo          # Default model for all operations
OPENAI_ANALYSIS_MODEL=gpt-3.5-turbo # Model specifically for analysis (optional)
OPENAI_SIMULATION_MODEL=gpt-4       # Model for user simulation - higher quality (optional)

# Service configuration
TIME_SPAN_MONTHS=3
CACHE_EXPIRY_HOURS=24
