# Discord Bot Configuration
DISCORD_TOKEN=your_discord_token_here
DISCORD_BOT_PERMISSIONS=your_bot_permissions_here
DISCORD_BOT_ID=your_bot_id_here
DISCORD_PUBLIC_KEY=your_public_key_here
DISCORD_INSTALLATION_URL=https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID_HERE

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Fetch Mode Configuration
# Options: "guild" or "dm"
FETCH_MODE=guild

# Discord Server Configuration
GUILD_ID=your_guild_id_here         # The ID of your Discord server
CHANNEL_ID=your_channel_id_here     # The ID of the channel to fetch messages from
USER_ID=your_user_id_here           # The ID of the user to analyze messages for

# Note: To find IDs in Discord, enable Developer Mode in Discord settings,
# then right-click on servers, channels, or users to "Copy ID"